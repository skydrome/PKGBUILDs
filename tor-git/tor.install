post_install() {
  echo "==> "
  echo "==> Tor has been preconfigured to run as a client only"
  echo "==> Tor is experimental software, Do not rely on it for strong anonymity."
  echo "==> "
}

post_upgrade() {
  post_install
  [[ $(id -g tor) = '43' ]] || {
        echo -n ">>> Updating tor user..."
        groupmod --gid 43 tor
        usermod  --uid 43 tor
        echo " done"
    }
}
